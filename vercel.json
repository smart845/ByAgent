{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "src/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/bybit/(.*)",
      "dest": "https://api.bybit.com/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}